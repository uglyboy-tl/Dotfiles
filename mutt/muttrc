# Change the following line to a different editor you prefer.
set editor = "vim"

# 通用设定
set move = no
set sort = 'threads'
set sort_aux = 'reverse-date'
set auto_tag = yes
set charset="utf-8"
auto_view text/html   #自动显示HTML

# 发送者账号
set realname="田陆"
set from="uglyboy@aliyun.com"

# 分类邮箱
set folder = "$HOME/.Mail"
source ~/.Mail/mailboxes
#set spoolfile = "+account/INBOX"
#set record = "+account/Sent\ Items"
#set postponed = "+account/Drafts"

mailboxes `ls -r ~/.Mail | xargs | sed 's/ / =/g' |sed 's/inbox/=inbox/'`