# Change the following line to a different editor you prefer.
set editor = "vim"

# 通用设定
set move = no
set sort = 'threads'
set sort_aux = 'reverse-date'
set auto_tag = yes
set charset="utf-8"
auto_view text/html   #自动显示HTML

# 发送者账号
set realname="田陆"
set from="uglyboy@aliyun.com"

# 分类邮箱
set mbox_type=Maildir
set folder = "$HOME/.Mail"
set mbox= $HOME/.Mail
set spoolfile=+inbox
set record = +sent
set postponed=+draft

mailboxes `ls -r ~/.Mail | xargs | sed 's/ / =/g' |sed 's/inbox/=inbox/'`

#
# keybindings
#
macro index,pager I '<shell-escape> fetchmail<enter>' "获取邮件"

# List mailboxes
macro index,pager c "<change-folder>?<toggle-mailboxes>" "打开另一个文件夹"