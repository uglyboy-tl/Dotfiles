#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -show drun

alt + Tab
	rofi -show window

#super + r
#	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + b
	~/.local/bin/rofi-bluetooth

super + e
	alacritty  --class lf -e ~/.local/bin/lf.sh

super + {m, h}
	alacritty -e {ncmpcpp, htop}

#
# Msater Volume
#
XF86AudioRaiseVolume
	amixer -Mq set Master 2.5%+,5%+ unmute

XF86AudioLowerVolume
	amixer -Mq set Master 2.5%-,5%- unmute

XF86AudioMute
	amixer -q set Master toggle
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + q
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + shift + f
    bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
        bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
