{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-hashline",
  ],
  "model": "opencode/minimax-m2.5-free",
  "small_model": "opencode/gpt-5-nano",
  "share": "disabled",
  "autoupdate": false,
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
  },
  "lsp": {
    "bash": {
      "disabled": true
    }
  },
  "disabled_providers": [
    "github-copilot",
    "github-copilot-enterprise",
    "github-models"
  ],
  "provider": {
    "google": {
      "options": {
        "baseURL": "https://xget.uglyboy.cn/ip/gemini/v1beta"
      },
    },
    "openrouter": {
      "options": {
        "baseURL": "https://xget.uglyboy.cn/ip/openrouter/api/v1"
      },
    },
    "n1n": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "n1n",
      "options": {
        "baseURL": "https://api.n1n.ai/v1"
      },
      "models": {
        "gemini-3-flash-preview": {
          "name": "gemini-3-flash"
        },
        "minimax-m2.1": {
          "name": "minimax-m2.1"
        },
        "gpt-5.2": {
          "name": "gpt-5.2"
        },
        "gpt-5.3-codex": {
          "name": "gpt-5.3-codex"
        },
        "claude-opus-4-6": {
          "name": "claude-opus-4-6"
        }
      }
    },
  }
}