{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@latest",
    "@tarquinen/opencode-dcp@latest"
  ],
  "model": "deepseek/deepseek-chat",
  "small_model": "opencode/gpt-5-nano",
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "*.lock",
      "**/*.log",
      ".cache/**",
      "build/**",
      "__pycache__/**",
      ".venv/**",
      "venv/**",
      "test/bats/**",
      "test/test_helper/bats-assert/**",
      "test/test_helper/bats-support/**"
    ]
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "autoupdate": false,
  "share": "manual",
  "lsp": {
    "bash": {
      "disabled": true
    }
  },
  "provider": {
    "volcengine": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "火山引擎",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/coding/v3"
      },
      "models": {
        "ark-code-latest": {
          "name": "ark-code-latest"
        }
      }
    },
    "n1n": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "n1n",
      "options": {
        "baseURL": "https://api.n1n.ai/v1"
      },
      "models": {
        "gpt-5-nano": {
          "name": "gpt-5-nano"
        },
        "gemini-3-flash-preview": {
          "name": "gemini-3-flash"
        },
        "minimax-m2.1": {
          "name": "minimax-m2.1"
        },
        "gpt-5.2": {
          "name": "gpt-5.2"
        },
        "gpt-5.3-codex": {
          "name": "gpt-5.3-codex"
        },
        "claude-opus-4-6": {
          "name": "claude-opus-4-6"
        }
      }
    }
  }
}