# Theme
#include catppuccin-latte

#粘贴版，鼠标选中即复制
set selection-clipboard clipboard

# See man `man zathurarc'
map r reload
map - zoom out
map + zoom in
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map , scroll half-up
map . scroll half-down

#以宽度自适应打开
set adjust-open "width"
#默认高度，像素
set window-height 1200
#默认宽度
set window-width 1080

#字体与字号
set font "Sarasa UI SC Regular 10"

#只显示文件名，否则显示完整路径
set window-title-basename true

#中文pdf需将实时搜索设为false
set incremental-search false

#显示右侧进度条
set show-v-scrollbar true