#! /bin/sh
export TERM=linux

#inspired by gk
_c() { bspc config "$@"; }
_m() { bspc monitor "$@"; }
_r() { bspc rule -a "$@"; }
_s() {
	pkill -x "$1"
	{
		sleep 0.1
		"$@" &
	}
}

_m -d I II III IV V

_c border_width         0
_c window_gap           10
_c split_ratio          0.52
_c borderless_monocle   true
_c gapless_monocle      true

#Border colors
_c normal_border_color "#4C566A"
_c active_border_color "#434C5E"
_c focused_border_color "#2E3440"
_c presel_feedback_color "#3B4252"

# startup
_s sxhkd
_s picom -b
_s xsetroot -cursor_name left_ptr
_s xmodmap -e 'pointer = 3 2 1'
_s redshift
_s polybar --reload main
_s ~/.local/bin/dwall.sh -s aurora
_s dunst

_r Microsoft-edge desktop='^1' follow=on
_r obsidian desktop='^2' follow=on
_r Typora desktop='^2' follow=on
_r lf desktop='^3' follow=on
_r vlc desktop='^4' follow=on
_r netease-cloud-music state=tiled desktop='^4' follow=on
_r TDAppDesktop desktop='^5' follow=on
_r Code desktop='^5' follow=on
_r rofi state=floating sticky=on
_r feh state=floating

_r Alacritty state=floating rectangle=1280x720+640+320
#_r Alacritty state=floating rectangle=1960x1080+300+140